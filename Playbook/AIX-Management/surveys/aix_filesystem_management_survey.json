{
  "name": "AAP 2.5 AIX Filesystem Management Survey",
  "description": "Survey for AIX filesystem monitoring and auto-expansion. Credentials are automatically injected by AAP.",
  "questions": [
    {
      "variable": "target_hosts",
      "type": "multiplechoice",
      "question": "Select target AIX hosts or groups:",
      "choices": [
        "aix",
        "production",
        "staging",
        "development",
        "all"
      ],
      "default": "aix",
      "required": true
    },
    {
      "variable": "filesystem_threshold",
      "type": "integer",
      "question": "Filesystem usage threshold percentage (will override defaults):",
      "default": 85,
      "min": 50,
      "max": 95,
      "required": false
    },
    {
      "variable": "change_reason",
      "type": "text",
      "question": "Reason for this operation:",
      "default": "Automated filesystem monitoring and expansion",
      "required": true
    },
    {
      "variable": "change_ticket",
      "type": "text",
      "question": "Change ticket number (if applicable):",
      "default": "",
      "required": false
    },
    {
      "variable": "enable_debug",
      "type": "boolean",
      "question": "Enable debug logging?",
      "default": false
    }
  ]
}