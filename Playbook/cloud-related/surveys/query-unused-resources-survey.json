[
  {
    "variable": "cloud_provider",
    "question_name": "Cloud Provider",
    "type": "multiplechoice",
    "choices": ["aws", "azure", "gcp"],
    "default": "aws",
    "required": true,
    "help_text": "Select your cloud provider to audit unused resources"
  },
  {
    "variable": "region",
    "question_name": "Region/Zone",
    "type": "text",
    "required": true,
    "help_text": "AWS region, Azure location, or GCP zone to scan for unused resources"
  },
  {
    "variable": "resource_group",
    "question_name": "Resource Group (Azure only)",
    "type": "text",
    "required": true,
    "when": "cloud_provider == 'azure'"
  },
  {
    "variable": "gcp_project",
    "question_name": "GCP Project (GCP only)",
    "type": "text",
    "required": true,
    "when": "cloud_provider == 'gcp'"
  },
  {
    "variable": "unused_resource_output_file",
    "question_name": "Output File Name (optional)",
    "type": "text",
    "required": false,
    "help_text": "Custom filename for the unused resources report"
  },
  {
    "variable": "send_email_report",
    "question_name": "Send Email Report",
    "type": "multiplechoice",
    "choices": ["yes", "no"],
    "default": "no",
    "required": false,
    "help_text": "Send the report via email (requires SMTP configuration)"
  },
  {
    "variable": "save_prefilled_vars",
    "question_name": "Save these answers to a prefilled file for future reuse?",
    "type": "multiplechoice",
    "choices": ["yes", "no"],
    "default": "no",
    "required": false
  },
  {
    "variable": "prefilled_vars_file_name",
    "question_name": "Prefilled Vars File Name (if saving)",
    "type": "text",
    "required": false,
    "when": "save_prefilled_vars == 'yes'"
  }
]
