[
  {
    "variable": "cloud_provider",
    "question_name": "Cloud Provider",
    "type": "multiplechoice",
    "choices": ["aws", "azure", "gcp"],
    "default": "aws",
    "required": true,
    "help_text": "Select your cloud provider for storage provisioning"
  },
  {
    "variable": "volume_name",
    "question_name": "Volume Name",
    "type": "text",
    "required": true,
    "help_text": "Name for the persistent volume/disk"
  },
  {
    "variable": "volume_size",
    "question_name": "Volume Size (GB)",
    "type": "integer",
    "required": true,
    "min": 1,
    "max": 16384,
    "default": 10,
    "help_text": "Size of the volume in gigabytes"
  },
  {
    "variable": "region",
    "question_name": "Region/Zone",
    "type": "text",
    "required": true,
    "help_text": "AWS region, Azure location, or GCP zone"
  },
  {
    "variable": "resource_group",
    "question_name": "Resource Group (Azure only)",
    "type": "text",
    "required": false,
    "when": "cloud_provider == 'azure'"
  },
  {
    "variable": "gcp_project",
    "question_name": "GCP Project (GCP only)",
    "type": "text",
    "required": false,
    "when": "cloud_provider == 'gcp'"
  },
  {
    "variable": "zone",
    "question_name": "GCP Zone (GCP only)",
    "type": "text",
    "required": false,
    "when": "cloud_provider == 'gcp'",
    "help_text": "GCP zone for disk placement"
  },
  {
    "variable": "volume_type",
    "question_name": "Volume Type (AWS only)",
    "type": "multiplechoice",
    "choices": ["gp2", "gp3", "io1", "io2"],
    "default": "gp3",
    "required": false,
    "when": "cloud_provider == 'aws'"
  },
  {
    "variable": "storage_account_type",
    "question_name": "Storage Account Type (Azure only)",
    "type": "multiplechoice",
    "choices": ["Standard_LRS", "Standard_GRS", "Premium_LRS"],
    "default": "Standard_LRS",
    "required": false,
    "when": "cloud_provider == 'azure'"
  },
  {
    "variable": "disk_type",
    "question_name": "Disk Type (GCP only)",
    "type": "multiplechoice",
    "choices": ["pd-standard", "pd-ssd", "pd-balanced"],
    "default": "pd-standard",
    "required": false,
    "when": "cloud_provider == 'gcp'"
  },
  {
    "variable": "environment",
    "question_name": "Environment Tag",
    "type": "multiplechoice",
    "choices": ["development", "staging", "production"],
