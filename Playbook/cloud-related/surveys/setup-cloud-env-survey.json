    "default": "aws",
    "required": true,
    "help_text": "Select your cloud provider for environment setup"
  },
  {
    "variable": "environment_name",
    "question_name": "Environment Name",
    "type": "text",
    "required": true,
    "help_text": "Name for your cloud environment (used for tagging)"
  },
  {
    "variable": "region",
    "question_name": "Region/Location",
    "type": "text",
    "required": true,
    "help_text": "AWS region, Azure location, or GCP region"
  },
  {
    "variable": "vpc_cidr",
    "question_name": "VPC/VNet CIDR Block",
    "type": "text",
    "default": "10.0.0.0/16",
    "required": false,
    "help_text": "CIDR block for the main network"
  },
  {
    "variable": "subnet_cidr",
    "question_name": "Subnet CIDR Block",
    "type": "text",
    "default": "10.0.1.0/24",
