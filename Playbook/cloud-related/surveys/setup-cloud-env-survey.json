    "help_text": "Ports to allow in security groups/firewall rules"
  },
  {
    "variable": "allowed_cidr",
    "question_name": "Allowed CIDR for Access",
    "type": "text",
    "default": "0.0.0.0/0",
    "required": false,
    "help_text": "CIDR block allowed to access resources (0.0.0.0/0 = anywhere)"
  },
  {
    "variable": "enable_nat_gateway",
    "question_name": "Enable NAT Gateway/Instance",
    "type": "multiplechoice",
    "choices": ["yes", "no"],
    "default": "no",
    "required": false,
    "help_text": "Create NAT gateway for private subnet outbound internet access"
